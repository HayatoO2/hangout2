
<div class ="wrapper">



<div class="box2">
<h2>新規登録</h2>




<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
<%= render 'layouts/error_messages',class: "form-field center", model: f.object %>

  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "ニックネーム" %>
  </div>


  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（６文字以上） %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions p-4">
    <%= f.submit "新規登録" %>
  </div>
<% end %>


</div>



<div class="container">
<%= link_to "ログイン", new_user_session_path, class: "btn btn-primary btn-lg " %>
</div>
<br>
<br>


</div>

