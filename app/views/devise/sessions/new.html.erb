
<div class ="wrapper">



<div class="box2">
<h2>ログイン</h2>




<%= form_with model: @user, url: user_session_path, local: true do |f| %>
<%= render 'layouts/error_messages', model: f.object %>

  


  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  
  <div class="actions p-4">
    <%= f.submit "ログイン" %>
  </div>
<% end %>


</div>



<div class="container">
<%= link_to "新規登録", new_user_registration_path, class: "btn btn-primary btn-lg " %>
</div>
<br>
<br>


</div>

